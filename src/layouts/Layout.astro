---
import Footer from "@/components/layout/Footer.astro";
import Nav from "@/components/layout/Nav.astro";

import "@/styles/global.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Omakube - A fork of Omakub, more flexible and refined."
    />
    <title>Omakube</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.svg" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:url" content="https://omakube.omakasui.org" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Omakube - A fork of Omakub, more flexible and refined."
    />
    <meta
      property="og:description"
      content="A fork of Omakub, more flexible and refined."
    />
    <meta
      property="og:image"
      content="https://omakube.omakasui.org/og-image.png"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="omakube.omakasui.org" />
    <meta property="twitter:url" content="https://omakube.omakasui.org" />
    <meta
      name="twitter:title"
      content="Omakube - A fork of Omakub, more flexible and refined."
    />
    <meta
      name="twitter:description"
      content="A fork of Omakub, more flexible and refined."
    />
    <meta
      name="twitter:image"
      content="https://omakube.omakasui.org/og-image.png"
    />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="font-monospace flex min-h-screen flex-col font-mono text-[14px] leading-[1.6]"
  >
    <Nav />
    <main
      role="main"
      aria-label="Main content"
      class="mx-0 my-16 flex-1 px-8 py-0 lg:px-16"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
