---
interface Props {
  variant?: "default" | "elevated" | "outlined";
  hover?: boolean;
  class?: string;
}

const { variant = "default", hover = true, class: className } = Astro.props;

const variantClasses = {
  default: "border border-border-dark bg-background-tertiary",
  elevated:
    "border border-border-dark bg-gradient-to-br from-background-tertiary to-surface shadow-[0_8px_20px_rgba(0,0,0,0.3)]",
  outlined: "border-2 border-primary/20 bg-transparent",
};

const hoverClasses = hover
  ? "transition-all duration-300 hover:border-primary hover:scale-105"
  : "";
---

<div
  class={`rounded-lg ${variantClasses[variant]} ${hoverClasses} ${className || ""}`}
>
  <slot />
</div>
